# ETL Movilidad Medell√≠n - Environment Variables Example
# Copiar a .env y rellenar con valores reales

# ==========================================
# GCP Configuration
# ==========================================
GCP_PROJECT_ID=etl-movilidad-mde
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT=etl-runner@etl-movilidad-mde.iam.gserviceaccount.com

# ==========================================
# Database
# ==========================================
DATABASE_URL=postgresql://user:password@host:5432/etl_movilidad
# Ejemplo Cloud SQL:
# DATABASE_URL=postgresql://etl_app:YOUR_PASSWORD@/etl_movilidad?host=/cloudsql/etl-movilidad-mde:us-central1:etl-movilidad-db

# ==========================================
# Cloud Run Services
# ==========================================
ADK_SCORER_URL=https://adk-scorer-xxx-uc.a.run.app
SCRAPER_ADV_URL=https://scraper-adv-xxx-uc.a.run.app

# ==========================================
# Alertas
# ==========================================
# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL_ALERTS=#movilidad-alertas
SLACK_CHANNEL_ERRORS=#etl-errors

# Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=-1001234567890

# ==========================================
# External APIs
# ==========================================
# Twitter/X API
TWITTER_BEARER_TOKEN=AAAAAAAAAAAAAAAAAAAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI (para embeddings)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==========================================
# n8n Configuration
# ==========================================
N8N_ENCRYPTION_KEY=random-32-character-string-here
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=strong-password-here
N8N_WEBHOOK_URL=https://your-n8n-instance.com
TZ=America/Bogota

N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
N8N_EXECUTIONS_DATA_PRUNE=true
N8N_EXECUTIONS_DATA_MAX_AGE=168

# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
LOG_LEVEL=info

# ADK Scorer
ADK_MODEL_NAME=gemini-1.5-flash
ADK_TEMPERATURE=0.1
ADK_MAX_TOKENS=1024

# Scraper
SCRAPER_RATE_LIMIT=30
SCRAPER_TIMEOUT_MS=10000

# ==========================================
# Feature Flags (opcional)
# ==========================================
ENABLE_TWITTER_SOURCE=true
ENABLE_METRO_SOURCE=true
ENABLE_LOCAL_MEDIA_SOURCE=true
ENABLE_EMBEDDINGS=true
ENABLE_SLACK_ALERTS=true
ENABLE_TELEGRAM_ALERTS=false

# ==========================================
# Monitoring (opcional)
# ==========================================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
DATADOG_API_KEY=xxxxxxxxxxxxxxxxxxxxx
